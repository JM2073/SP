<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week1_Temp"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Week1_Temp.MainWindow"
        mc:Ignorable="d"
        Title="Dice Roller" Height="166.5" Width="212">
    <Grid>
        <Button x:Name="Btn_RollDice" Content="Roll Dice" HorizontalAlignment="Left" Margin="23,39,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <xctk:DoubleUpDown x:Name="UpDown_NumOfDice" HorizontalAlignment="Left" Margin="110,39,0,0" VerticalAlignment="Top" Minimum="0" Maximum="6"/>
        <Label Content="Please enter the number of dice &#xD;&#xA;you wish to roll then press the button" HorizontalAlignment="Left" Margin="-3,-3,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Height="38" Margin="23,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>

